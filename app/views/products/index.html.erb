<div class="container mt-5">
  <div class="d-flex justify-content-between mb-3 pt-4">
    <h2>Products List</h2>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price, unit: "â‚¬") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
